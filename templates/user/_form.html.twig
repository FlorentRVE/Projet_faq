
{# ========== Formulaire principal, utiliser pour la modification des utilisateurs ============ #}

    <div class="bg-slate-800 p-7 mx-auto my-6 rounded-xl w-4/5 shadow-xl">


        <div class="w-11/12 mx-auto flex flex-col">
            
            {{ form_start(form) }}
                <div class="mb-8 flex flex-col">
                    {{ form_label(form.email, 'Identifiant', {'label_attr': {'class': 'text-slate-100 uppercase font-semibold mb-2'}}) }}
                    {{ form_widget(form.email, {'attr': {'class': 'p-2 rounded-lg'}}) }}
                </div>

                <div class="mb-8 flex flex-col">
                    {{ form_label(form.departement, 'Departement', {'label_attr': {'class': 'text-slate-100 uppercase font-semibold mb-2'}}) }}
                    {{ form_widget(form.departement, {'attr': {'class': 'text-slate-100 flex gap-2'}}) }}
                </div>

                <div class="mb-8 flex flex-col">
                    {{ form_label(form.roles, 'Roles', {'label_attr': {'class': 'text-slate-100 uppercase font-semibold mb-2'}}) }}
                    {{ form_widget(form.roles, {'attr': {'class': 'text-slate-100 flex gap-2'}}) }}
                </div>

                {{ form_errors(form, {'class': 'text-red-600 uppercase font-semibold mb-2'}) }}

                
                <button type="submit" class="btn bg-green-500 rounded-2xl text-center hover:brightness-125 shadow-lg font-bold px-7 py-3 self-end w-1/3 text-lg">{{ button_label|default('Modifier la question') }}</button>
                
            {{ form_end(form) }}
        </div>
    </div>