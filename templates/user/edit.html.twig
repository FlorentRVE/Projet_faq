{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
    <h1 class="text-center text-3xl uppercase text-slate-100 font-bold bg-slate-800 py-5 shadow-xl">Modifier l'utilisateur</h1>

    {# ======== Formulaire de modification ========= #}
    {{ include('user/_form.html.twig', {'button_label': "Modifier l'utilisateur"}) }}

    {# ========= Boutons d'actions ======== #}
    <div class="flex justify-between w-4/5 mx-auto">
        <a href="{{ path('app_user_index') }}"  class="bg-blue-800 text-slate-50 rounded-2xl text-center px-5 py-3 hover:brightness-125 shadow-lg font-semibold">Retour Ã  la liste</a>
        <form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Voulez vous vraiment supprimer cet utilisateur ?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
            <button class="btn bg-red-600 rounded-2xl text-center px-5 py-3 hover:brightness-125 shadow-lg font-semibold text-slate-100">Supprimer</button>
        </form>

    </div>
{% endblock %}
