<!DOCTYPE html>
<html>

<head>
    <title>FAQ numéro client</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
    <script src="{{ asset('/js/script.js') }}"></script>
</head>

<body class="bg-slate-50">

    {# ========== Page principale FAQ =========#}

    <header class="bg-blue-900 p-2">
    
        <h1 class=" text-center text-3xl uppercase text-slate-100 font-bold">FAQ numéro client</h1>

        {# ========== Barre de recherche =========#}
        <form action="#" method="get" class="p-4 shadow-lg text-lg text-center bg-blue-900 font-semibold">
            <label for="search" class="text-slate-100">Rechercher une question </label>
            <input type="text" id="search" name="search" value="{{ searchTerm }}" class="w-1/2 text-slate-900 px-2 rounded-lg">
            <button type="submit" class="bg-green-500 rounded-2xl text-center px-4 py-1 hover:brightness-125">Rechercher</button>
        </form>

    </header>

    <content class="flex flex-col gap-10 mt-10">

        {# ========== Boutons de tri par département =========#}
        <div class="flex justify-evenly bg-blue-900 p-3 rounded-2xl shadow-xl uppercase mx-auto w-2/5">

            <p class="reset bg-slate-300 rounded-2xl text-center py-2 hover:brightness-125 shadow-lg font-bold cursor-pointer w-1/5">Tous</p>
            <p data-departement="CityKer" class="category bg-orange-400 rounded-2xl text-center py-2 hover:brightness-125 shadow-lg font-bold cursor-pointer w-1/5">CityKer</p>
            <p data-departement="Velo" class="category bg-yellow-400 rounded-2xl text-center py-2 hover:brightness-125 shadow-lg font-bold cursor-pointer w-1/5">Velo</p>
            <p data-departement="Vert" class="category bg-green-400 rounded-2xl text-center py-2 hover:brightness-125 shadow-lg font-bold cursor-pointer w-1/5">Vert</p>
        </div>

        {# ========== Affichage des questions regroupées par catégorie =========#}
        <div class="flex flex-wrap gap-10 justify-center">

            {% if data is not empty %}
                {% set categories = [] %}
                {% for dataItem in data %}
                    {% set category = dataItem.categorie %}
                    {% if category not in categories %}
                        {% set categories = categories|merge([category]) %}
                    {% endif %}
                {% endfor %}

                {% for category in categories %}

                    <div class="container flex flex-col shadow-lg rounded-xl bg-green-300 w-5/12">
                        <h3 class="bg-blue-900 p-2 rounded-t-xl font-semibold text-slate-100">{{ category }}</h3>
                        {% for dataItem in data %}
                            {% if dataItem.categorie == category %}
                                <div class="toggleBtn objet bg-green-100 rounded-xl shadow-lg text-lg m-3 cursor-pointer" data-departement="{{ dataItem.departement }}">
                                    <h3 class="bg-blue-900 p-2 rounded-t-xl font-semibold text-slate-100">{{ dataItem.question }}</h3>
                                    <div class="p-1 answer">{{ dataItem.reponse | raw }}</div>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </content>

    <footer class="flex justify-center bg-blue-900 p-3 text-slate-100 mt-28">
        <p>Copyright © 2023 - Tous droits réservés</p>
    </footer>
</body>
</html>
