{% extends 'base.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}
    <h1 class="text-center text-3xl uppercase text-slate-100 font-bold bg-blue-900 py-5 shadow-xl">Gestion Catégories</h1>

    <content class="flex flex-col gap-10 w-11/12 mx-auto">
        <div class="mt-12 self-end">
            <a href="{{ path('app_categorie_new') }}" class="bg-green-500 rounded-2xl text-center px-5 py-3 hover:brightness-125 shadow-lg font-bold">Nouvelle catégorie</a>
        </div>

        <table class="table shadow-xl text-lg">
            <thead>
                <tr class="bg-blue-900 text-slate-100 border-2 border-slate-900 uppercase">
                    <th>Departement</th>
                    <th>Label</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody class="bg-blue-900">
            {% for categorie in categories %}
                <tr class="border-2 border-slate-900 objet text-center">
                    <td class="p-2 text-slate-800 text-center border-2 border-slate-900 uppercase font-extrabold w-28 bg-slate-300">{{ categorie.departement }}</td>
                    <td class="bg-slate-50 pl-1 border-2 border-slate-900">{{ categorie.label }}</td>
                    <td class="bg-blue-900 p-2 text-center">
                        <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="bg-yellow-400 text-center px-3  hover:brightness-125 rounded-lg font-semibold">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>

                    <td colspan="5" class="text-slate-100 p-3">Aucune demande ne correspond à votre recherche...</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="">
            <a href="{{ path('app_question_index') }}" class="bg-blue-700 text-slate-50 rounded-2xl text-center px-5 py-3 hover:brightness-125 shadow-lg font-semibold">Retour à la liste</a>

        </div>
    </content>

{% endblock %}
