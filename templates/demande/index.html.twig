{% extends 'base.html.twig' %}

{% block title %}Panneau d'administration FAQ{% endblock %}

{% block body %}

    <header>
        <h1 class="text-center text-3xl uppercase text-slate-100 font-bold bg-blue-900 py-5 shadow-xl">Panneau d'administration FAQ</h1>

        {# ========== Barre de recherche =========#}
        <form action="#" method="get" class="p-4 shadow-lg text-lg text-center bg-blue-900 font-semibold">
            <label for="search" class="text-slate-100">Rechercher une question </label>
            <input type="text" id="search" name="search" value="{{ searchTerm }}" class="w-1/2 text-slate-900 px-2 rounded-lg">
            <button type="submit" class="bg-green-500 rounded-2xl text-center px-4 py-1 hover:brightness-125">Rechercher</button>
        </form>
    </header>

    <content>
        <div class="flex items-center my-5 justify-around">
        
            {# ========== Boutons de tri par catégorie =========#}
            <div class="flex justify-between gap-3 bg-blue-900 p-3 rounded-2xl shadow-lg uppercase">
                <p value="all" class="reset bg-slate-300 rounded-2xl text-center px-5 py-3 hover:brightness-125 shadow-lg font-bold cursor-pointer">Tous</p>
                <p value="city_ker" data-categorie="city_ker" class="categoryAdmin bg-orange-400 rounded-2xl text-center px-5 py-3 hover:brightness-125 shadow-lg font-bold cursor-pointer">CITY KER</p>
                <p value="velo" data-categorie="velo" class="categoryAdmin bg-yellow-400 rounded-2xl text-center px-5 py-3 hover:brightness-125 shadow-lg font-bold cursor-pointer">Velo</p>
                <p value="vert" data-categorie="vert" class="categoryAdmin bg-green-400 rounded-2xl text-center px-5 py-3 hover:brightness-125 shadow-lg font-bold cursor-pointer">Vert</p>
            </div>

            {# ========== Bouton renvoyant au formulaire de création de question =========#}
            <a href="{{ path('app_demande_new') }}" class="bg-green-500 rounded-2xl text-center px-5 py-3 hover:brightness-125 shadow-lg font-bold">Nouvelle question</a>
        </div>



        {# ========== Affichage des questions/réponses sous forme de tableau =========#}
        <table class="table mx-auto shadow-xl text-lg w-11/12">

            <thead>

                <tr class="bg-blue-900 text-slate-100 border-2 border-slate-900 uppercase">
                    <th class="p-2">Catégorie</th>
                    <th class="p-2">Sous-catégorie</th>
                    <th class="p-2">Question</th>
                    <th class="p-2">Réponse</th>
                    <th class="p-2">Actions</th>
                </tr>
            </thead>

            <tbody class="bg-blue-900">

            {% for demande in demandes %}

                <tr class="border-2 border-slate-900 objet" data-categorie={{ demande.Categorie }}>

                    <td class="p-2 text-slate-800 text-center uppercase font-extrabold {{ demande.Categorie is same as 'city_ker' ? 'bg-orange-400' : demande.Categorie is same as 'velo' ? 'bg-yellow-400' : 'bg-green-400'}}">{{ demande.Categorie }}</td>
                    <td class="p-2 bg-emerald-500 text-slate-100 font-semibold">{{ demande.SousCategorie }}</td>
                    <td class="p-2 bg-blue-900 text-slate-100 font-semibold">{{ demande.Question }}</td>
                    <td class="bg-green-100 pl-1">{{ demande.Reponse }}</td>
                    <td class="bg-blue-900 p-2 text-center">
                        <a href="{{ path('app_demande_show', {'id': demande.id}) }}" class="bg-green-400  text-center px-3  hover:brightness-125 rounded-lg font-semibold">Voir</a>
                        <a href="{{ path('app_demande_edit', {'id': demande.id}) }}" class="bg-yellow-400 text-center px-3  hover:brightness-125 rounded-lg font-semibold">Modifier</a>
                    </td>
                </tr>
            {% else %}

                <tr>

                    <td colspan="5" class="text-slate-100 p-3">Aucune demande ne correspond à votre recherche...</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>


    </content>
{% endblock %}
