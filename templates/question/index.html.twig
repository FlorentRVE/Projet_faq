{% extends 'base.html.twig' %}

{% block title %}Panneau d'administration FAQ{% endblock %}

{% block body %}
    <div class="bg-slate-100 min-h-screen">
            {# ================================== | Page principale Panneau d'administration pour gérer les questions | =========================#}

        <header>        
            {# ==================== Barre de recherche ==================#}
            <div class="ml-44 flex shadow-md w-11/12 mx-auto bg-slate-50">
                <form action="#" method="get" class="p-4 text-center flex-auto ml-24">
                    <input type="text" id="search" name="search" value="{{ searchTerm }}" class="w-1/2 text-slate-900 px-2 rounded-lg border border-slate-900" placeholder="Rechercher dans les questions ou réponses ...">
                    <button type="submit" class="text-slate-800 text-center px-4 py-1 font-semibold text-2xl transition-all hover:scale-110"><i class="fa-solid fa-magnifying-glass"></i></button>
                
                </form>

                {# ============= Bouton de déconnexion ================= #}
                <a href="{{ path('app_logout') }}"  class="flex flex-col text-center transition-all hover:scale-105 p-6">
                    <p class="font-semibold">Se déconnecter</p>
                    <i class="fa-solid fa-right-to-bracket text-slate-800 text-2xl text-center font-semibold"></i>
                </a>
            </div>



        </header>

        {# ======================== Sidebar ========================== #}
        <sidebar class="bg-slate-800 fixed left-0 top-0 h-screen">
            <div class="flex flex-col items-center w-48">

                {# ===== LOGO ====== #}
                <a href="{{ path('app_faq') }}">

                    <img src="{{ asset('images/SODIPARC_logo_blanc_SIGN.png') }}" alt="Logo" class="p-4 mt-2">
                <a>

                <div class="flex flex-col items-center gap-3 mt-10 border-t border-slate-600 pt-4">
                
                    <a href="{{ path('app_categorie_index') }}" class="text-slate-50 text-center hover:bg-sky-800 mb-5 px-4 py-1 rounded-lg w-full">Gestion catégories</a>
                    {# ===== Affichage de la gestion des utilisateurs et départements seulement si ROLE_ADMIN ===== #}
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('app_departement_index') }}" class="text-slate-50 text-center hover:bg-sky-800 mb-5 px-4 py-1 rounded-lg w-full h-auto">Gestion départements</a>
                        <a href="{{ path('app_user_index') }}" class="text-slate-50 text-center hover:bg-sky-800 mb-5 px-4 py-1 rounded-lg w-full h-auto">Gestion utilisateurs</a>
                    {% endif %}
                </div>

                {# ========== Boutons de tri par catégorie si pas admin =========#}
                {% if not is_granted('ROLE_ADMIN') %}
                    {# Récupère les catégories des questions pour créer les boutons de tri correspondant #}
                    <div class="flex flex-col gap-5 justify-evenly p-3 rounded-2xl w-full">

                        <p class="reset text-slate-50 text-center hover:bg-sky-800 mb-5 px-4 py-1 rounded-lg w-full h-auto cursor-pointer">Tous</p>
                        
                        {# === Pour chaque catégorie, on crée un bouton de tri correspondant === #}
                        {% for departement in data %}
                            {% for categorie in departement.categories %}
                            <p data-categorie="{{ categorie }}" class="category text-slate-50 text-center hover:bg-sky-800 mb-5 px-4 py-1 rounded-lg w-full h-auto cursor-pointer">{{ categorie }}</p>
                            {% endfor %}
                        {% endfor %}
                    </div>

                    <a href="{{ path('app_mot_de_passe_changer', {'id': app.user.id}) }}" class="text-slate-50 text-center hover:bg-sky-800 mb-5 px-4 py-1 rounded-lg w-full">Modifier mot de passe</a>

                {% endif %}
            </div>


        </sidebar>


        <content>
            <div class="ml-36 p-5">

                {# =================== Bloc bouton tri et nouvelle question =================== #}
                <div class="flex items-end justify-between my-10 w-11/12 mx-auto">

                    <div class="flex flex-col gap-2">
                        <h1 class="text-xl uppercase text-sky-900 font-bold text-center mt-4">Gestion des questions</h1>

                        {# ======== Affichage des boutons de tri seulement si ROLE_ADMIN ====== #}
                        {% if is_granted('ROLE_ADMIN') %}

                            {# ========== Boutons de tri par département =========#}
                            {# Récupère les départements des questions pour créer les boutons de tri correspondant #}
                            <div class="flex justify-between gap-3 bg-slate-800 p-3 rounded-2xl shadow-lg uppercase">

                                <p class="reset bg-sky-800 text-slate-50 rounded-2xl text-center py-2 px-4 hover:brightness-125 shadow-lg font-bold cursor-pointer">Tous</p>
                                
                                {# === Pour chaque département dans le tableau qu'on vient de créer, on crée un bouton de tri correspondant === #}
                                {% for departement in data %}
                                    <p data-departement="{{ departement }}" class="departement bg-sky-800 text-slate-50 rounded-2xl text-center py-2 px-4 hover:brightness-125 shadow-lg font-bold cursor-pointer">{{ departement }}</p>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>


                    {# ========== Bouton renvoyant au formulaire de création de question =========#}
                    <a href="{{ path('app_question_new') }}" class="bg-green-500 rounded-2xl text-center px-5 py-3 hover:brightness-125 shadow-lg font-bold">Nouvelle question</a>
                    
                </div>



                {# ========== Affichage des questions/réponses sous forme de tableau =========#}
                <table class="table mx-auto shadow-xl text-lg w-11/12">

                    <thead>

                        <tr class="bg-sky-900 text-slate-100 border-2 border-slate-900 uppercase p-2">

                            <th class="p-2 border-2 border-slate-900">Departement</th>
                            <th class="p-2 border-2 border-slate-900">Categorie</th>
                            <th class="p-2 border-2 border-slate-900">Question</th>
                            <th class="p-2 border-2 border-slate-900">Reponse</th>
                            <th class="p-2 border-2 border-slate-900">actions</th>
                        </tr>
                    </thead>

                    <tbody>
                    {% if data is not empty %}

                        {% for departement in data %}

                            {% for categorie in departement.categories %} 

                                {% for question in categorie.questions %}

                                    <tr class="border-2 border-slate-900 objet" data-departement="{{ departement }}" data-categorie="{{ categorie  }}">

                                        <td class="p-2 text-slate-800 text-center border-2 border-slate-900 uppercase font-extrabold w-28 {{ departement.label is same as 'CityKer' ? 'bg-orange-400' : departement.label is same as 'Velo' ? 'bg-yellow-400' : 'bg-green-400'}}">{{ departement }}</td>
                                        <td class="p-2 bg-slate-50 text-slate-900 text-center border-2 border-slate-900 uppercase font-extrabold w-28">{{ categorie }}</td>
                                        <td class="p-2 bg-slate-200 text-slate-900 border-2 border-slate-900 font-semibold w-1/2">{{ question.label }}</td>
                                        <td class="bg-slate-50 border-2 border-slate-900 p-2">{{ question.reponse | raw}}</td>
                                        <td class="bg-sky-900 p-2 text-center">
                                            <a href="{{ path('app_question_edit', {'id': question.id}) }}" class="bg-sky-700 text-center px-3  hover:brightness-125 rounded-lg font-semibold text-slate-50">Modifier</a>
                                            <form method="post" action="{{ path('app_question_delete', {'id': question.id}) }}" onsubmit="return confirm('Voulez vous vraiment supprimer cette question ?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ question.id) }}">
                                                <button class="btn text-red-700 text-center px-3  hover:brightness-125 rounded-lg font-semibold">Supprimer</button>
                                            </form>
                                        </td>
                                    </tr>
                                {% endfor %}
                            {% endfor %}
                        {% endfor %}
                    {% else %}

                        <tr>

                            <td colspan="5" class="text-slate-100 p-3">Aucune demande ne correspond à votre recherche...</td>
                        </tr>
                    {% endif %}
                    </tbody>
                </table>
            </div>
        </content>

        <div>
            <button class="topBtn fixed bottom-[4%] right-[4%] bg-green-500 px-3 py-2 rounded-full font-semibold">Haut de page</button>
        </div>
    </div>

{% endblock %}
